name:                renovate
version:             0.1.0.0
synopsis:            An interface for binary analysis and rewriting
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Tristan Ravitch
maintainer:          tristan@nochair.net
-- copyright:           
category:            Disassembler
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library
  exposed-modules:     Renovate
  other-modules:
                       Renovate.Arch
                       Renovate.BasicBlock.Assemble
                       Renovate.BasicBlock.Types
                       Renovate.Config
                       Renovate.Diagnostic
                       Renovate.Recovery.Monad
                       Renovate.Redirect.Concretize
                       Renovate.Redirect.Internal
                       Renovate.Redirect.LayoutBlocks
                       Renovate.Redirect.LayoutBlocks.Compact
                       Renovate.Redirect.LayoutBlocks.Types
                       Renovate.Redirect.Monad
                       Renovate.Redirect.Symbolize
                       Renovate.Rewrite
                       Renovate.ABI
                       Renovate.Address
                       Renovate.Analysis.FunctionRecovery
                       Renovate.BasicBlock
                       Renovate.BinaryFormat.ELF
                       Renovate.ISA
                       Renovate.Recovery
                       Renovate.Redirect
  -- other-extensions:    
  build-depends:       base >=4.10 && <5,
                       bytestring,
                       containers >= 0.5 && < 0.6,
                       heaps >= 0.3 && < 0.4,
                       mtl >= 2.2 && < 2.3,
                       mwc-random >= 0.13.6.0 && < 0.14,
                       exceptions >= 0.7 && < 0.9,
                       vector >= 0.10 && < 0.13,
                       lens >= 4 && < 5,
                       located-base >= 0.1 && < 0.2,
                       prettyprinter,
                       parameterized-utils,
                       macaw,
                       elf-edit >= 0.28

  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options: -Wall -fno-ignore-asserts
